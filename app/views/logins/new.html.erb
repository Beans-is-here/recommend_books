<h1>ログイン</h1>

<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :name, 'Name', style: "display: block" %>
    <%= form.text_field :name, value: params[:name] %>
  </div>

  <div>
    <%= form.label :email, 'Email', style: "display: block" %>
    <%= form.email_field :email, value: params[:email] %>
  </div>

  <div>
    <%= form.submit 'ログイン' %>
  </div>
  <div>
    <%=link_to "新規作成", new_user_path %>
    <%= link_to 'passwordをお忘れの方はコチラ', new_password_reset_path %>
  </div>
<% end %>